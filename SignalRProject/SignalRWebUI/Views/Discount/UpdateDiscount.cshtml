@model UpdateDiscountDto
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirimli Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<input type="hidden" asp-for="DiscountID" />
							<div class="card-title">Yeni İndirimli Ürün Girişi</div>
						</div>
						<div class="card-body">
							
						</div>
					</div>

					<div class="card-body">
					<div class="form-group">
						<label for="Title">Ürün Adını Girin</label>
						<input type="text" class="form-control" asp-for="Title" id="Title">
					</div>
					</div>

					<div class="card-body">
						<div class="form-group">
							<label for="Amount">Ürün İndirim Oranını Girin</label>
							<input type="text" class="form-control" asp-for="Amount" id="Amount">
						</div>
						
					</div>

					<div class="card-body">
						<div class="form-group">
							<label for="ImageUrl">Ürün Görselini Girin</label>
							<input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
						</div>
					</div>

					<div class="card-body">
						<div class="form-group">
							<label for="Description">Ürün Açıklamasını Girin</label>
							<input type="text" class="form-control" asp-for="Description" id="Description">
						</div>
					</div>





					<div class="card-action">
						<button class="btn btn-primary">İndirimli Ürünü Ekle Ekle</button>

					</div>
				</form>
			</div>

		</div>


	</div>
</div>


