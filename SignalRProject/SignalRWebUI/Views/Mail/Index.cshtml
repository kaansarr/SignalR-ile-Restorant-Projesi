@model CreateMailDto


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Mail Sayfası Ayarları </h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Mail Gönderme Paneli</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Name">Alıcı Mail Adresi</label>
								<input type="text" class="form-control" asp-for="ReceiverMail" id="ReceiverMail">

							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Surname">Konu</label>
								<input type="text" class="form-control" asp-for="Subject" id="Subject">

							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Mail">Mesajınız</label>
								<textarea rows="5" class="form-control" asp-for="Body"id="Body"></textarea>

							</div>
						</div>
						

					
						<div class="card-action">
							<button class="btn btn-success">Maili Gönder</button>

						</div>
					</div>

				</form>
			</div>

		</div>


	</div>
</div>


